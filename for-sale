    <script>
        function creatCarCard(car) {
            const {
                slug,
                inspected,
                name,
                featured_reviews,
                prices,
                supplier,
                photos,
                categories,
                num_of_images,
                date_created,
                year,
                location,
                document,
                brandName
            } = car;

            let model
            if (name.toLowerCase().includes(brandName.toLowerCase())) {
                model = name.toLowerCase().replace(brandName.toLowerCase() + ' ', '');
                model = model.replace(/ /g, '-');
            } else {
                model = name.toLowerCase().replace(/ /g, '-');
            }


            // Format the date_created into a time difference (in days)
            const today = new Date();
            const currentDate = today.getTime();
            const carCreationDate = date_created * 1000;
            const timeDifferenceInMs = currentDate - carCreationDate;
            const timeDifferenceInDays = Math.floor(timeDifferenceInMs / (1000 * 60 * 60 * 24));
            const formattedPrice = new Intl.NumberFormat('en-NG', {
                style: 'currency',
                currency: 'NGN',
                minimumFractionDigits: 0,
            }).format(prices);

            return `
            <a href="${brandName}/${model}/for-sale/${slug}" class="col-4 card px-0 m-0 border-0">
                <div class="card rounded m-0">
                    <div class="card-image m-0 ">
                        
                        <a href="${brandName}/${model}/for-sale/${slug}" class="flex-grow-1">
                            <div class="d-flex justify-content-center align-items-center">
                                <img src="${photos}"
                                    class="card-img-top mx-auto img-fluid text-center" alt="${name}" style="object-fit:cover">
                            </div>
                        </a>
                    </div>
                    <div class="car-body mt-2 flex-grow-1">
                        <div class="d-flex justify-content-between px-2 align-items-center">
                            <h3 class="card-text">
                                <a class="text-decoration-none" href="${brandName}/${model}/for-sale/${slug}">${name}</a>
                            </h3>
                            <span class="card-text text-danger">
                                <i class="fas fa-star"></i> ${featured_reviews}
                            </span>
                        </div>
                        <div class="d-flex justify-content-between px-1 gap-1 my-1">
                            <h4 class="fw-bold fs-7 mb-0">
                                <i class="fa fa-fw fa-calendar"></i> ${year}
                            </h4>
                            <h4 class="fw-bold fs-7 mb-0">
                                <i class="fa fa-fw fa-car"></i> ${ 'Foreign Used'}
                            </h4>
                            <p class="fw-bold fs-8  mb-0">
                                <i class="fa fa-fw fa-clock"></i> 56,452 mi
                            </p>
                            <p class="fw-bold fs-8 mb-0 ">
                                <i class="fa fa-fw fa-gas-pump"></i> ${ 'Petrol'}
                            </p>
                        </div>
                        <div class="bg-white d-flex seller-info align-items-center">
                            <div class="seller">
                                <img src="img/seller.jpeg" class="w-4" alt="">
                            </div>
                            <h3 class="fs-7 fw-bolder m-0">
                                ${supplier }
                            </h3>
                        </div>
                        <div class="d-flex justify-content-between  align-items-center px-2 mb-3">
                            <h4 class="fs-6 mb-0">
                                <i class="fa fa-fw mr-1 fa-location-arrow"></i>
                                ${location }
                            </h4>
                            <p class="text-danger fs-6 mb-0 fw-bold">
                                ${formattedPrice  }
                            </p>
                        </div>
                        <div class="d-flex flex-column justify-content-center align-items-center">
                            <a href="${brandName}/${model}/for-sale/${slug}" class="btn btn-danger text-white w-75">View Details</a>
                            <div class="desc d-flex justify-content-between align-items-baseline px-auto md-px-4 py-2">
                                <span class="card-text px-2">
                                    <span class="badge badge-light px-3 py-2 text-black">
                                        *listed ${timeDifferenceInDays} days ago
                                    </span>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        
    `;
        }

        const alloffers = [
                    ];


        function getCheckboxValues(name) {
            const checkboxes = document.querySelectorAll(`input[type="checkbox"][name="${name}"]:checked`);
            const selectedValues = [];

            checkboxes.forEach((checkbox) => {
                selectedValues.push(checkbox.value.toLowerCase());
            });

            return selectedValues;
        }

        function updateCarListComponent(filteredData) {
            const carListContainer = document.getElementById(
                "carListContainer"
            );

            // Clear the previous content of the container
            carListContainer.innerHTML = "";

            // Loop through the filteredData and create new elements to display the filtered cars
            filteredData.forEach((car) => {
                // Create a new car element
                const brandCardHTML = creatCarCard(car);
                const listItem = document.createElement("div");
                listItem.className = "col-12 col-md-6 col-lg-4 car-container border-0";
                listItem.innerHTML = brandCardHTML;
                carListContainer.appendChild(listItem);
            });
        }
        // Default: Show all cars by passing the entire array to the updateCarListComponent function
        updateCarListComponent(alloffers.slice(0, 30));

        document.addEventListener("DOMContentLoaded", function() {


            // Function to format the number with commas
            function formatNumberWithCommas(value) {
                return value.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
            }

            // Get the input element
            const priceInput = document.getElementById('minPriceFilter');
            const priceInput2 = document.getElementById('maxPriceFilter');

            // Listen for the 'input' event and format the number with commas
            priceInput.addEventListener('input', function() {
                const formattedValue = formatNumberWithCommas(this.value.replace(/,/g, ''));
                this.value = formattedValue;
            });

            priceInput2.addEventListener('input', function() {
                const formattedValue = formatNumberWithCommas(this.value.replace(/,/g, ''));
                this.value = formattedValue;
            });


            // Adding event listener to a button to apply the filter
            document.getElementById("filterForm").addEventListener("submit", function(event) {
                event.preventDefault();


                const locationValues = getCheckboxValues("location");
                const brandValues = getCheckboxValues("brand");
                const categoryValues = getCheckboxValues("category");
                const yearValues = getCheckboxValues("year");

                const minPriceFilterInput = document.getElementById("minPriceFilter");
                const minPriceFilterValue = parseFloat(minPriceFilterInput.value.replace(/,/g, '').replace(
                    /\s/g, ''));
                const minPriceFilter = minPriceFilterValue

                const maxPriceFilterInput = document.getElementById("maxPriceFilter");
                const maxPriceFilterValue = parseFloat(maxPriceFilterInput.value.replace(/,/g, '').replace(
                    /\s/g, ''));
                const maxPriceFilter = maxPriceFilterValue





                const filteredArray = alloffers.filter(function(item) {
                    // console.log(minPriceFilter)
                    let priceCheck = true;
                    let locationCheck = true;
                    let brandCheck = true;
                    let categoryCheck = true;
                    let yearCheck = true;

                    if (minPriceFilter && maxPriceFilter) {
                        const price = parseFloat(item.document.prices.actual
                            .NGN); // Convert the price to a numeric value
                        priceCheck = minPriceFilter <= price && price <= maxPriceFilter;
                    }

                    if (locationValues.length) {
                        const location = item.document.supplier_state;
                        locationCheck = locationValues.includes(location.toLowerCase());

                    }

                    if (brandValues.length) {
                        const brand = item.document.categories.brand[0];
                        brandCheck = brandValues.includes(brand.toLowerCase());

                    }

                    if (categoryValues.length) {
                        const category = item.document.categories.car_categories[0];
                        categoryCheck = categoryValues.includes(category.toLowerCase());

                    }

                    if (yearValues.length) {
                        const year = item.document.categories.year[0];
                        yearCheck = yearValues.includes(year);

                    }

                    result = priceCheck && locationCheck && brandCheck && categoryCheck &&
                        yearCheck;

                    return result;
                });


                updateCarListComponent(filteredArray);

            });
            document.getElementById("resetFiltersButton").addEventListener("click", function(event) {
                event.preventDefault();

                // Clear filter values for location and brand
                const locationCheckboxes = document.querySelectorAll(
                    'input[type="checkbox"][name="location"]:checked');
                locationCheckboxes.forEach((checkbox) => {
                    checkbox.checked = false;
                });

                const brandCheckboxes = document.querySelectorAll(
                    'input[type="checkbox"][name="brand"]:checked');
                brandCheckboxes.forEach((checkbox) => {
                    checkbox.checked = false;
                });

                // Clear input fields for min and max price filters
                document.getElementById("minPriceFilter").value = '';
                document.getElementById("maxPriceFilter").value = '';

                // Display all cars again
                updateCarListComponent(alloffers.slice(0, 30));
            });
        });
    </script>

