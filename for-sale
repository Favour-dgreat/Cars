<script>
    document.addEventListener("DOMContentLoaded", function() {
        // Function to format the number with commas
        function formatNumberWithCommas(value) {
            return value.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
        }

        // Get the input elements
        const priceInput = document.getElementById('mobileMinPriceFilter');
        const priceInput2 = document.getElementById('mobileMaxPriceFilter');

        // Listen for the 'input' event and format the number with commas
        priceInput.addEventListener('input', function() {
            const formattedValue = formatNumberWithCommas(this.value.replace(/,/g, ''));
            this.value = formattedValue;
        });

        priceInput2.addEventListener('input', function() {
            const formattedValue = formatNumberWithCommas(this.value.replace(/,/g, ''));
            this.value = formattedValue;
        });

        // Adding event listener to a button to apply the filter
        document.getElementById("mobileSubmitFiltersButton").addEventListener("click", function(event) {
            event.preventDefault();

            const locationValues = getCheckboxValues("mobileLocation");
            const brandValues = getCheckboxValues("mobileBrand");
            const minPriceFilterInput = document.getElementById("mobileMinPriceFilter");
            const minPriceFilterValue = parseFloat(minPriceFilterInput.value.replace(/,/g, '').replace(
                /\s/g, ''));
            const minPriceFilter = minPriceFilterValue;

            const maxPriceFilterInput = document.getElementById("mobileMaxPriceFilter");
            const maxPriceFilterValue = parseFloat(maxPriceFilterInput.value.replace(/,/g, '').replace(
                /\s/g, ''));
            const maxPriceFilter = maxPriceFilterValue;

            const filteredArray = alloffers.filter(function(item) {
                let priceCheck = true;
                let locationCheck = true;
                let brandCheck = true;

                if (minPriceFilter && maxPriceFilter) {
                    const price = parseFloat(item._source.prices.actual.NGN);
                    priceCheck = minPriceFilter <= price && price <= maxPriceFilter;
                }

                if (locationValues.length) {
                    const location = item._source.supplier_state;
                    locationCheck = locationValues.includes(location.toLowerCase());
                }

                if (brandValues.length) {
                    const brand = item._source.categories.brand[0];
                    brandCheck = brandValues.includes(brand.toLowerCase());
                }

                result = priceCheck && locationCheck && brandCheck;
                return result;
            });

            updateCarListComponent(filteredArray);
        });

        document.getElementById("mobileResetFiltersButton").addEventListener("click", function(event) {
            event.preventDefault();

            // Clear filter values for location and brand
            const locationCheckboxes = document.querySelectorAll(
                'input[type="checkbox"][name="mobileLocation"]:checked');
            locationCheckboxes.forEach((checkbox) => {
                checkbox.checked = false;
            });

            const brandCheckboxes = document.querySelectorAll(
                'input[type="checkbox"][name="mobileBrand"]:checked');
            brandCheckboxes.forEach((checkbox) => {
                checkbox.checked = false;
            });

            // Clear input fields for min and max price filters
            document.getElementById("mobileMinPriceFilter").value = '';
            document.getElementById("mobileMaxPriceFilter").value = '';

            // Display all cars again
            updateCarListComponent(alloffers);
        });
    });
</script>

