        <script>
        function creatCarCard(car) {
            const {
                slug,
                // inspected,
                name,
                featured_reviews,
                prices,

                photos,

                num_of_images,
                date_created,
                year,
                categories,
                document,
                brandName
            } = car;
            console.log(categories);
            let model
            if (name.toLowerCase().includes(brandName.toLowerCase())) {
                model = name.toLowerCase().replace(brandName.toLowerCase() + ' ', '');
                model = model.replace(/ /g, '-');
            } else {
                model = name.toLowerCase().replace(/ /g, '-');
            }



            return `<div class="card px-0 mx-0 car-boxx ">

            <a  href="${brandName}/${model}/${year}" class="flex-grow-1">
                <div class="car-image d-flex justify-content-center align-items-center px-3">
                    <img src="${photos}" class="card-img-top rounded mx-auto img-fluid text-center  mb-0 "
                        alt="${name}" style="object-fit:contain">
                </div>
            </a>

            <div class="car-body flex-grow-1">
                <div class=" d-flex justify-content-between px-3 align-items-center">
                    <h3 class="card-text mb-3 px-1 " style="font-size: 0.75rem;"><a class="text-decoration-none"
                             href="${brandName}/${model}/${year}" >${name}

                            
                        </a></h3>
                    <span class="card-text text-danger">
                        <i
                            class="fas fa-star "></i>${featured_reviews}
                    </span>
                </div>
                <div class="desc d-flex justify-content-between align-items-baseline px-auto md-px-4 pb-4 pt-1">
                    <span class="card-text px-2">
                        <span class="badge badge-light px-3 py-2 text-black">${year}</span>
                        <span class="badge badge-light px-3 py-2 text-black text-capitalize">${categories}</span>
                    </span>
                    
                </div>
            </div>
        </div> `;

        }

        const cars = [
                    ];

        function getYearValueFromDropdown() {
            let selectedValue = '';
            // Get the dropdown element by its ID
            const dropdown = document.getElementById("yearDropdown");

            // Access the selected value of the dropdown using the 'value' property
            selectedValue = dropdown.value;
            return selectedValue;
        }

        function updateCarListComponent(filteredData) {
            const carListContainer = document.getElementById(
                "carListContainer"
            );

            // Clear the previous content of the container
            carListContainer.innerHTML = "";

            // Loop through the filteredData and create new elements to display the filtered cars
            filteredData.forEach((car) => {
                // Create a new car element
                const brandCardHTML = creatCarCard(car);
                const listItem = document.createElement("div");
                listItem.className = "col-12 col-md-6 col-lg-3 car-container my-3";
                listItem.innerHTML = brandCardHTML;
                carListContainer.appendChild(listItem);
            });
        }
        // Default: Show all cars by passing the entire array to the updateCarListComponent function
        // updateCarListComponent(cars);


        document.addEventListener("DOMContentLoaded", function() {

            // Function to format the input price with commas
            function formatNumberWithCommas(value) {
                return value.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
            }

            // Get the input element
            const priceInput = document.getElementById('priceFilter');

            // Listen for the 'input' event and format the number with commas
            priceInput.addEventListener('input', function() {
                const formattedValue = formatNumberWithCommas(this.value.replace(/,/g, ''));
                this.value = formattedValue;
            });

            // Adding event listener to a button to apply the filter
            document.getElementById("filterForm").addEventListener("submit", function(event) {
                event.preventDefault();


                // const locationValues = getCheckboxValues("location");
                // const brandValues = getCheckboxValues("brand");
                const priceFilterInput = document.getElementById("priceFilter");
                const priceFilterValue = parseFloat(priceFilterInput.value.replace(/,/g, '').replace(
                    /\s/g, ''));
                const priceFilter = priceFilterValue
                // console.log(priceFilter);
                const yearFilter = getYearValueFromDropdown();



                const filteredArray = cars.filter(function(item) {
                    // console.log(minPriceFilter)
                    let priceCheck = true;
                    let yearCheck = true;

                    if (priceFilter) {
                        const price = parseFloat(item.document.prices.actual
                            .NGN); // Convert the price to a numeric value
                        const filter = parseFloat(
                            priceFilter); // Convert the price to a numeric value
                        priceCheck = price <= filter;
                    }

                    if (yearFilter != '') {
                        const year = item.document.categories.year[0];
                        yearCheck = yearFilter == year;
                    }

                    result = priceCheck && yearCheck;

                    return result;
                });

                updateCarListComponent(filteredArray);

            });
            // Adding event listener to the Reset button
            document.getElementById("resetFiltersButton").addEventListener("click", function(event) {
                event.preventDefault();

                // Clear filter values
                document.getElementById("priceFilter").value = '';
                document.getElementById("yearDropdown").value = '';

                // Display all cars again
                updateCarListComponent(cars);
            });

        });
    </script>
    
